<div class="container">
  <div class="row">
    <% if @banner_img %>
      <div class="col-md-12 product-catalog-banner">
        <%= link_to (image_tag @banner_img[:desktop_url], {class: "visible-md visible-lg img-responsive"}), @banner_img[:url] %>
        <%= link_to (image_tag @banner_img[:tablet_url], {class: "visible-sm img-responsive"}), @banner_img[:url] %>
        <%= link_to (image_tag @banner_img[:mobile_url], {class: "visible-xs img-responsive"}), @banner_img[:url] %>
      </div>
    <% end %>

    <% if products.any? %>
      <% products.each do |product| %>

        <div class="col-md-3 col-sm-6">
          <a class="product-catalog-wrapper" href="<%= spree.product_path(product, taxon_id: @taxon.try(:id)) %>">
            <div id="product_<%= product.id %>" class="product-catalog" data-hook="products_list_item" itemscope itemtype="http://schema.org/Product">
              <div class="product-catalog__image">
                <%= image_tag(product.display_image.attachment(:large), itemprop: "image") %>
              </div>
              <div class="product-catalog__name">
                <p><%= product.name.html_safe %></p>
              </div>
              <div class="product-catalog__price" itemprop="price">
                <% if has_starting_from_price?(product) %>
                  <div class="product-catalog__starting-from">
                    <%= Spree.t('starting_from') %>
                  </div>
                <% end %>
                <%= display_price(product) %>
              </div>
            </div>
          </a>
        </div>

      <% end %>
    <% else %>
      <div class="col-xs-12" data-hook="products_search_results_heading_no_results_found">
        <%= Spree.t(:no_products_found) %>
      </div>
    <% end %>

  </div>
</div>
