<div class="site-container">
  <div class="container-fluid js_site_container js_main controller">
    <div class="row">
      <div class="col-md-12">
        <%= render partial: "navigation", locals: { sticky: true } %>
        <div class="wrapper">
          <div class="container">

            <%= form_for @order, :url => update_cart_path, :html => {:class => 'js-cart-form'} do |order_form| %>
              <div class="table-cart">
                <div class="table-cart__header hidden-sm hidden-xs">
                  <div class="row">
                    <div class="table-cart__content col-md-6"><h4><%= Spree.t(:item)  %></h4></div>
                    <div class="table-cart__content col-md-2"><h4><%= Spree.t(:price) %></h4></div>
                    <div class="table-cart__content col-md-2"><h4><%= Spree.t(:qty)   %></h4></div>
                    <div class="table-cart__content col-md-1"><h4><%= Spree.t(:total) %></h4></div>
                    <div class="table-cart__content col-md-1">&nbsp;</div>
                  </div>
                </div>
                <div class="table-cart__body">

                  <% if @order.line_items.empty? %>
                    <div class="row">
                      <div class="col-xs-12 table-cart__content">
                        <p>
                          <%= Spree.t(:your_cart_is_empty) %><span class="continue-shopping"><a href="<%= continue_shopping_path %>"><%= Spree.t(:continue_shopping) %></a>
                          </span>
                        </p>
                      </div>
                    </div>
                  <% else %>

                    <%= render partial: 'line_item', collection: @order.line_items, locals: { order_form: order_form } %>

                  <% end %>
                </div>
                <div class="table-cart__footer">
                  <div class="row">
                    <div class="col-md-9 table-cart__content"></div>
                    <div class="col-md-1 table-cart__content text-right">
                      <span class="table-cart__total"><%= Spree.t(:total) %></span>
                    </div>
                    <div class="col-md-2 table-cart__content">
                      <span class="table-cart__total-price"><%= @order.display_total %></span>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

            <div class="table-cart__console">
              <div class="row">
                <div class="col-md-6">
                  <%= form_tag empty_cart_path, :method => :put do %>
                    <%= submit_tag Spree.t(:empty_cart), :class => 'btn-grey' %>
                    <span class="continue-shopping">
                      <i class="hidden-xs hidden-sm"><%= Spree.t(:or) %></i>
                      <a href="<%= continue_shopping_path %>"><%= Spree.t(:continue_shopping) %></a>
                    </span>
                  <% end %>
                </div>

                <div class="col-md-6 text-right">
                  <%= button_tag :class => 'btn-grey js-cart-update' do %>
                    <%= Spree.t(:update) %>
                  <% end %>
                  <%= button_tag :class => 'btn-checkout js-cart-checkout' do %>
                    <%= Spree.t(:checkout) %>
                  <% end %>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <%= render partial: "big_footer" %>
  <%= render partial: "footer" %>
</div>
