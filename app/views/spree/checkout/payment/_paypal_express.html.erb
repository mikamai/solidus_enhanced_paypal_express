<%
  options = {
    return_url: paypal_return_url(payment_method_id: payment_method.id),
    cancel_return_url: paypal_cancel_url(payment_method_id: payment_method.id)
  }
  link = payment_method.purchase_link(@order, options)
%>

<div class="button-group payment-buttons">
  <a href="<%= link %>" id="paypal-button" class="button inverted striped uppercase">
    <%= t 'front.checkout.proceed_to_the_payment' %>
  </a>
</div>
<img src="https://www.paypalobjects.com/webstatic/en_US/i/buttons/cc-badges-ppmcvdam.png" alt="Buy now with PayPal" />
