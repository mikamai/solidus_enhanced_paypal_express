<div class="site-container">
  <div class="container-fluid js_site_container js_main controller">
    <div class="row">
      <div class="col-md-12">
        <%= render partial: "navigation", locals: { sticky: true } %>

        <div class="contacts">
          <h2 class="contacts__title"><%= Spree.t('contacts.title') %></h2>
          <h3 class="contacts__subtitle"><%= Spree.t('contacts.subtitle') %></h3>
          <img data-fit="true" data-align="top center" class="coverized contacts__background" src="<%= image_path 'contacts/contacts.jpg' %>" alt="">
        </div>

        <div class="wrapper">
          <div class="container">
            <div class="row">
              <div class="col-md-5 col-md-offset-4">

                <div class="contacts-list">

                  <div class="contacts-info address">
                    <a href="https://goo.gl/maps/M73bdNeaJB52" target="_blank">
                    <i class="icon-pin"></i><%= Spree.t('contacts.address_contacts') %></a>
                  </div>

                  <div class="contacts-info mail">
                    <a href="mailto:shop@forst.it" target="_blank" title="shop@forst.it">
                    <i class="icon-mail"></i>shop@forst.it</a>
                  </div>

                  <div class="contacts-info phone">
                    <a href="tel:+390473260360" class="Blondie">
                      <i class="icon-phone"></i>+39 0473 260 360
                    </a>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= render partial: "big_footer" %>
  <%= render partial: "footer" %>
</div>
